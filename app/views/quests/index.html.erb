<div class="container row wood z-depth-5" style="width: 100%;height: 100%;max-width: 100%;margin: auto;">
  <div class="row m-flex">
    <% @quest.each do |quest| %>
      <div class="col s12 m4 l2">
        <div class="card hoverable sticky-action">
            <div class="card-image waves-effect waves-block waves-light">
              <%= image_tag quest.image, class: 'responsive-img activator' if quest.image.attached? %>
              <%= image_tag 'sky_00010.jpeg', class: 'responsive-img activator' unless quest.image.attached? %>
            </div>
          <div class="card-content register-index">
            <span class="card-title  activator"><%= quest.title %><i class="material-icons right">more_vert</i></span>
          </div>
          <div class="card-reveal register-index">
            <span class="card-title" style="overflow: scroll;"><%= quest.title %><i class="material-icons right">close</i></span>
            <br>
            <table class="responsive-table centered lighten-4 center-align  col s12 m12 l12">
              <thead>
                <tr>
                  <th>募集者</th>
                  <th>募集人数</th>
                  <th>活動日</th>
                  <th>活動地域</th>
                </tr>
              </thead>
              <tbody>
                <tr>
                  <td><%= link_to "#{quest.user.last_name}#{quest.user.first_name}", user_path(quest.user), class: "teal-text text-lighten-1" %></td>
                  <td><%= "#{quest.capacity}人" %></td>
                  <td><%= "#{l quest.date}" %></td>
                  <td><%= "#{quest.place_name}" %></td>
                </tr>
              </tbody>
            </table>
            <br>
          </div>
          <div class="card-action register-index">
            <p>現在の参加人数：<%= link_to "#{quest.joins.count}人", quest_joins_path(quest), class: "teal-text text-lighten-1" %></p>
            <br>
            <p><%= link_to '募集詳細・応募', quest_path(quest), class: "teal-text text-lighten-1" %></p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  <div class="row">
    <div class="col s4 m3 l3">
      <%= link_to_prev_page @quest, '前のページ', class: "prev btn green darken-1 waves-effect waves-light" %>
      <%= link_to_next_page @quest, '次のページ', class: "next btn green darken-1 waves-effect waves-light" %>
    </div>
  </div>
</div>

