<h1>マイページ</h1>

<h3>ユーザー名</h3>
<%= "#{@user.last_name}#{@user.first_name}" %>
<% if @user.id == current_user.id %>
  <h3>メールアドレス</h3>
  <%= @user.email %>
<% end %>
<h3>プロフィール</h3>
<%= @user.profile%>

<% if @user.id == current_user.id %>
  <%= link_to '編集', edit_user_registration_path(@user) %>
<% end %>